        <tr><td> <input type="text" name="t1" placeholder="username" required> </td></tr>
    <br><br>
   <tr><td> <input type="password" name="t2" placeholder="password" required> </td></tr>
    <br><br>
     <tr><td> <input type="submit" value="login"> </td></tr>
    </table>
    <br><br>

    {{ result }}

</form>
